@model system_cosasapup.Models.usuarios

@{
    ViewData["Title"] = "Login";
}

<div class="min-h-screen flex items-center justify-center bg-gradient-to-br from-gray-900 to-gray-800 text-white p-4">
    <div class="bg-gray-800 bg-opacity-75 backdrop-blur-lg rounded-xl shadow-2xl p-8 w-full max-w-md">

        <div class="mb-8 text-center">
            <img src="/img/logo.jpg" alt="COSASAPUP Logo" class="mx-auto w-20 h-20 rounded-full mb-4 shadow-lg border-2 border-indigo-500 p-1">

            <h1 class="text-4xl font-extrabold text-indigo-400 mb-2 tracking-wide">COSASAPUP</h1>

            <h2 class="text-2xl font-bold text-indigo-300">@ViewData["Title"]</h2>
        </div>

        <form asp-controller="Auth" asp-action="Login" method="post" novalidate class="space-y-6">

            <div>
                <label asp-for="correo" class="block mb-1 font-semibold text-left"></label>
                <input asp-for="correo"
                       class="w-full px-4 py-2 rounded-md bg-gray-700 text-white focus:outline-none focus:ring-2 focus:ring-indigo-400 transition-all duration-200" />
                <span asp-validation-for="correo" class="text-red-500 text-sm mt-1 block text-left"></span>
            </div>

            <div>
                <label asp-for="contraseña" class="block mb-1 font-semibold text-left"></label>
                <input asp-for="contraseña" type="password"
                       class="w-full px-4 py-2 rounded-md bg-gray-700 text-white focus:outline-none focus:ring-2 focus:ring-indigo-400 transition-all duration-200" />
                <span asp-validation-for="contraseña" class="text-red-500 text-sm mt-1 block text-left"></span>
            </div>

            <button type="submit"
                    class="w-full py-3 rounded-md bg-indigo-600 hover:bg-indigo-700 font-semibold transition-colors duration-300 shadow-lg hover:shadow-xl focus:outline-none focus:ring-2 focus:ring-indigo-500">
                Iniciar sesión
            </button>

        </form>

        <p class="mt-6 text-center text-gray-400">
            ¿No tienes cuenta?
            <a href="@Url.Action("Register", "Auth")" class="text-indigo-400 hover:text-indigo-600 font-semibold transition-colors duration-200">Regístrate</a>
        </p>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

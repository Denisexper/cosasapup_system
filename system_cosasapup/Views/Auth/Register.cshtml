@model system_cosasapup.Models.usuarios

@{
    ViewData["Title"] = "Registro";
}

<div class="min-h-screen flex items-center justify-center bg-gradient-to-br from-gray-900 to-gray-800 text-white">
    <div class="bg-gray-800 bg-opacity-75 backdrop-blur-lg rounded-xl shadow-2xl p-8 w-full max-w-md">

        <h2 class="text-3xl font-bold text-indigo-400 mb-8 text-center">@ViewData["Title"]</h2>

        <form asp-controller="Auth" asp-action="Register" method="post" novalidate class="space-y-6">

            <div>
                <label asp-for="correo" class="block mb-1 font-semibold"></label>
                <input asp-for="correo"
                       class="w-full px-4 py-2 rounded-md bg-gray-700 text-white focus:outline-none focus:ring-2 focus:ring-indigo-400" />
                <span asp-validation-for="correo" class="text-red-500 text-sm mt-1 block"></span>
            </div>

            <div>
                <label asp-for="contraseña" class="block mb-1 font-semibold"></label>
                <input asp-for="contraseña" type="password"
                       class="w-full px-4 py-2 rounded-md bg-gray-700 text-white focus:outline-none focus:ring-2 focus:ring-indigo-400" />
                <span asp-validation-for="contraseña" class="text-red-500 text-sm mt-1 block"></span>
            </div>

            <button type="submit"
                    class="w-full py-3 rounded-md bg-indigo-500 hover:bg-indigo-600 font-semibold transition-colors duration-300">
                Registrarse
            </button>

        </form>

        <p class="mt-6 text-center text-gray-400">
            ¿Ya tienes cuenta?
            <a href="@Url.Action("Login", "Auth")" class="text-indigo-400 hover:text-indigo-600 font-semibold">Inicia sesión</a>
        </p>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

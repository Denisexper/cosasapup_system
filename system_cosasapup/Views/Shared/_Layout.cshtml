@{
    var currentController = ViewContext.RouteData.Values["Controller"]?.ToString();
    var currentAction = ViewContext.RouteData.Values["Action"]?.ToString();
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - system_cosasapup</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/system_cosasapup.styles.css" asp-append-version="true" />

    <script src="https://cdn.tailwindcss.com"></script>

    <style>
        html, body {
            height: 100%;
            margin: 0;
        }

        body {
            display: flex;
            flex-direction: column;
            min-height: 100vh;
        }

        main {
            flex: 1 0 auto;
        }

        footer {
            flex-shrink: 0;
        }
    </style>
</head>
<body class="bg-gray-100 text-gray-800 font-sans">

    @if (!(currentController == "Auth" && (currentAction == "Login" || currentAction == "Register")))
    {
        <header>
            <nav class="bg-gray-800 shadow-md">
                <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
                    <div class="flex items-center justify-between h-16">
                        <div class="flex items-center">
                            <a class="text-white text-xl font-bold" asp-area="" asp-controller="Home" asp-action="Index">
                                system_cosasapup
                            </a>
                        </div>
                        <div class="hidden md:block">
                            <div class="ml-10 flex items-baseline space-x-4">
                                <a class="text-indigo-400 hover:text-white px-3 py-2 rounded-md text-sm font-medium" asp-area="" asp-controller="Home" asp-action="Index">Inicio</a>
                                <a class="text-indigo-400 hover:text-white px-3 py-2 rounded-md text-sm font-medium" asp-area="" asp-controller="Home" asp-action="ListaPegues">Pegues</a>
                                <a class="text-indigo-400 hover:text-white px-3 py-2 rounded-md text-sm font-medium" asp-area="" asp-controller="Home" asp-action="ListaPagos">Pagos</a>
                            </div>
                        </div>
                    </div>
                </div>
            </nav>
        </header>
    }

    <main role="main" class="py-8">
        <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
            @RenderBody()
        </div>
    </main>

    @if (!(currentController == "Auth" && (currentAction == "Login" || currentAction == "Register")))
    {
        <footer class="bg-gray-800 text-white text-center py-4">
            <div class="text-sm">
                &copy; 2025 - <span class="font-semibold">system_cosasapup</span> -
                <a class="underline text-gray-300 hover:text-white" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
            </div>
        </footer>
    }

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

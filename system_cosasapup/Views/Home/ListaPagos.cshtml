@model List<system_cosasapup.Models.pagos>

@{
    ViewData["Title"] = "Lista de Pagos";
    int currentPage = ViewBag.CurrentPage ?? 1;
    int totalPages = ViewBag.TotalPages ?? 1;
    int pageSize = ViewBag.PageSize ?? 10;
}

<h2 class="text-2xl font-bold mb-4 text-gray-800">Lista de Pagos</h2>

@* Se recomienda envolver esto en una condición de sesión para que solo se muestre si el usuario está logeado *@
@if (Context.Session.GetInt32("UsuarioId") != null)
{
    <a asp-action="ReportePagos" target="_blank" class="inline-flex items-center bg-red-500 hover:bg-red-700 text-white font-semibold py-2 px-4 rounded focus:outline-none focus:shadow-outline">
        <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
        </svg>
        Generar Reporte PDF
    </a>
}


<div class="overflow-x-auto">
    <table class="min-w-full leading-normal shadow-md rounded-lg overflow-hidden bg-white mt-4">
        @* Añadido mt-4 para espacio superior *@
        <thead>
            <tr class="bg-gray-100 text-gray-700">
                <th class="px-3 py-2 border-b-2 border-gray-200 text-left text-xs font-semibold uppercase tracking-wider">
                    <strong>Pago ID</strong>
                </th>
                <th class="px-3 py-2 border-b-2 border-gray-200 text-left text-xs font-semibold uppercase tracking-wider">
                    <strong>Monto</strong>
                </th>
                <th class="px-3 py-2 border-b-2 border-gray-200 text-left text-xs font-semibold uppercase tracking-wider">
                    <strong>Fecha de Pago</strong>
                </th>
                <th class="px-3 py-2 border-b-2 border-gray-200 text-left text-xs font-semibold uppercase tracking-wider">
                    <strong>Mes Pagado</strong>
                </th>
                <th class="px-3 py-2 border-b-2 border-gray-200 text-left text-xs font-semibold uppercase tracking-wider">
                    <strong>Dueño (Pegue)</strong>
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var pago in Model)
            {
                <tr>
                    <td class="px-3 py-3 border-b border-gray-200 text-sm">
                        <p class="text-gray-900 whitespace-no-wrap">@pago.id</p>
                    </td>
                    <td class="px-3 py-3 border-b border-gray-200 text-sm">
                        <p class="text-gray-900 whitespace-no-wrap">@pago.monto.ToString("C")</p>
                    </td>
                    <td class="px-3 py-3 border-b border-gray-200 text-sm">
                        <p class="text-gray-900 whitespace-no-wrap">@pago.fechaPago.ToShortDateString()</p>
                    </td>
                    <td class="px-3 py-3 border-b border-gray-200 text-sm">
                        <p class="text-gray-900 whitespace-no-wrap">@pago.fechaPago.ToString("MMMM", new System.Globalization.CultureInfo("es-ES"))</p>
                    </td>
                    <td class="px-3 py-3 border-b border-gray-200 text-sm">
                        <p class="text-gray-900 whitespace-no-wrap">@pago.Pegue?.dueño</p>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

@if (totalPages > 1)
{
    <nav aria-label="Page navigation" class="mt-4">
        <ul class="inline-flex items-center -space-x-px pagination">
            @* Agregado 'pagination' class aquí *@
            <li class="@(currentPage == 1 ? "disabled" : "")">
                <a href="@(currentPage == 1 ? "#" : Url.Action("ListaPagos", new { page = currentPage - 1, pageSize = pageSize }))"
                   class="py-2 px-3 ml-0 leading-tight text-gray-500 bg-white border border-gray-300 rounded-l-lg hover:bg-gray-100 hover:text-gray-700 @(currentPage == 1 ? "opacity-50 cursor-not-allowed" : "")">
                    Anterior
                </a>
            </li>
            @for (int i = 1; i <= totalPages; i++)
            {
                <li class="@(i == currentPage ? "active" : "")">
                    <a href="@Url.Action("ListaPagos", new { page = i, pageSize = pageSize })"
                       class="py-2 px-3 text-sm leading-tight @(i == currentPage ? "text-indigo-600 bg-indigo-50 border border-indigo-500 hover:bg-indigo-100 hover:text-indigo-700" : "text-gray-500 bg-white border border-gray-300 hover:bg-gray-100 hover:text-gray-700")">
                        @i
                    </a>
                </li>
            }
            <li class="@(currentPage == totalPages ? "disabled" : "")">
                <a href="@(currentPage == totalPages ? "#" : Url.Action("ListaPagos", new { page = currentPage + 1, pageSize = pageSize }))"
                   class="py-2 px-3 leading-tight text-gray-500 bg-white border border-gray-300 rounded-r-lg hover:bg-gray-100 hover:text-gray-700 @(currentPage == totalPages ? "opacity-50 cursor-not-allowed" : "")">
                    Siguiente
                </a>
            </li>
        </ul>
    </nav>
}

<a asp-action="index" class="inline-flex items-center bg-gray-300 hover:bg-gray-400 text-gray-800 font-semibold py-2 px-4 rounded focus:outline-none focus:shadow-outline mt-3">
    <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path></svg>
    Volver al inicio
</a>
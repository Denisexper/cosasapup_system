@model List<system_cosasapup.Models.pagos>

@{
    ViewData["Title"] = "Lista de Pagos";
}

<h2 class="text-2xl font-bold mb-4">Lista de Pagos</h2>

<table class="table table-bordered table-striped w-full">
    <thead>
        <tr>
            <th>Pago ID</th>
            <th>Monto</th>
            <th>Fecha de Pago</th>
            <th>Dueño (Pegue)</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var pago in Model)
        {
            <tr>
                <td>@pago.id</td>
                <td>@pago.monto.ToString("C")</td>
                <td>@pago.fechaPago.ToShortDateString()</td>
                <td>@pago.Pegue?.dueño</td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="ListaPegues" class="btn btn-secondary mt-3">
    <i class="bi bi-arrow-left"></i> Volver a la lista de Pegues
</a>

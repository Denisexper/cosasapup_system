@model List<system_cosasapup.Models.pagos>

@{
    Layout = null; // Importante para que no use el layout principal en el PDF
}

<h2 style="text-align:center;">Reporte de Pagos</h2>

<table style="width:100%; border-collapse: collapse;" border="1">
    <thead style="background-color: #f2f2f2;">
        <tr>
            <th>Pago ID</th>
            <th>Monto</th>
            <th>Fecha de Pago</th>
            <th>Mes Pagado</th>
            <th>Dueño (Pegue)</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var pago in Model)
        {
            <tr>
                <td>@pago.id</td>
                <td>@pago.monto.ToString("C")</td>
                <td>@pago.fechaPago.ToShortDateString()</td>
                <td>@pago.fechaPago.ToString("MMMM", new System.Globalization.CultureInfo("es-ES"))</td>
                <td>@pago.Pegue?.dueño</td>
            </tr>
        }
    </tbody>
</table>

@model system_cosasapup.Models.pegues

@{
    ViewData["Title"] = "Confirmar Eliminación";
}

<div class="relative min-h-screen flex items-center justify-center bg-gray-100 p-3">
    <div class="bg-white rounded-lg shadow-xl overflow-hidden max-w-md w-full transform transition-all duration-300">
        <div class="bg-red-700 p-4 text-white text-center">
            <svg class="w-14 h-14 mx-auto mb-3" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"></path>
            </svg>
            <h2 class="text-xl font-extrabold mb-1">¡Atención! Acción Irreversible</h2>
            <p class="text-sm">Estás a punto de eliminar un registro.</p>
        </div>

        <div class="p-5">
            <p class="text-gray-800 text-sm mb-5 text-center">
                ¿Estás **seguro** de que deseas eliminar este registro de Pegue?
                Esta acción es **irreversible** y eliminará todos los datos asociados.
            </p>

            <div class="border border-red-300 rounded-md p-4 mb-6 bg-red-50">
                <h3 class="text-lg font-semibold text-red-800 mb-3 border-b-2 border-red-200 pb-1.5">Detalles del Pegue:</h3>
                <dl class="grid grid-cols-1 md:grid-cols-2 gap-y-1.5 gap-x-4 text-gray-700 text-sm">
                    <div class="flex flex-col">
                        <dt class="font-medium text-gray-600">ID:</dt>
                        <dd class="font-bold text-gray-900">@Model.PegueId</dd>
                    </div>

                    <div class="flex flex-col">
                        <dt class="font-medium text-gray-600">Dueño:</dt>
                        <dd class="font-bold text-gray-900">@Model.dueño</dd>
                    </div>

                    <div class="flex flex-col">
                        <dt class="font-medium text-gray-600">Comunidad:</dt>
                        <dd class="font-bold text-gray-900">@Model.comunidad</dd>
                    </div>

                    <div class="flex flex-col">
                        <dt class="font-medium text-gray-600">Dirección:</dt>
                        <dd class="font-bold text-gray-900">@Model.direccion</dd>
                    </div>

                    <div class="flex flex-col">
                        <dt class="font-medium text-gray-600">Código:</dt>
                        <dd class="font-bold text-gray-900">@Model.codigo</dd>
                    </div>

                    <div class="flex flex-col">
                        <dt class="font-medium text-gray-600">Estado:</dt>
                        <dd class="font-bold text-gray-900 @(Model.estado ? "text-green-600" : "text-red-600")">
                            @(Model.estado ? "Activo" : "Inactivo")
                        </dd>
                    </div>
                </dl>

                @if (Model.pagos != null && Model.pagos.Any())
                {
                    <h4 class="text-lg font-semibold text-red-800 mt-4 mb-2 border-b-2 border-red-200 pb-1.5">Pagos Asociados:</h4>
                    <ul class="list-disc list-inside text-gray-700 text-sm space-y-0.5">
                        @foreach (var pago in Model.pagos)
                        {
                            <li>Monto: <strong class="text-gray-900">@pago.monto.ToString("C")</strong>, Fecha: <strong class="text-gray-900">@pago.fechaPago.ToShortDateString()</strong></li>
                        }
                    </ul>
                    <p class="text-xs text-red-700 mt-3 font-semibold p-2 bg-red-100 rounded-md">
                        <strong class="font-extrabold">¡ADVERTENCIA!</strong> Al eliminar este pegue, **TODOS** los @Model.pagos.Count() pagos asociados también serán eliminados permanentemente.
                    </p>
                }
            </div>

            <form asp-action="EliminarPegue" asp-controller="Home" method="post" class="flex flex-col sm:flex-row justify-center gap-2.5">
                <input type="hidden" name="id" value="@Model.PegueId" />
                @Html.AntiForgeryToken()

                <button type="submit" class="bg-red-600 hover:bg-red-800 text-white font-extrabold py-2 px-5 rounded-md shadow-sm hover:shadow-md focus:outline-none focus:ring-4 focus:ring-red-300 transition duration-300 ease-in-out transform hover:scale-105 active:scale-95 text-sm">
                    Eliminar Permanentemente
                </button>

                <a asp-action="ListaPegues" class="bg-gray-300 hover:bg-gray-400 text-gray-800 font-bold py-2 px-5 rounded-md shadow-sm hover:shadow-md focus:outline-none focus:ring-4 focus:ring-gray-300 transition duration-300 ease-in-out transform hover:scale-105 active:scale-95 text-center flex items-center justify-center text-sm">
                    Cancelar
                </a>
            </form>
        </div>
    </div>
</div>
